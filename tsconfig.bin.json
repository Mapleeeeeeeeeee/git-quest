{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist/bin",
    "rootDir": "bin",
    "declaration": true,
    "sourceMap": true
  },
  "include": ["bin/**/*"],
  "exclude": ["node_modules", "dist"]
}
